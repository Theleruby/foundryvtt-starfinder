<div style="padding: 0px 8px;">
	<div class="bubble">
		<h3 class="bubble-header">{{ localize "SFRPG.ActorSheet.Bonuses.AttackDamage" }}</h3>
		<div class="bubble-info">
			<p>{{ localize "SFRPG.ActorSheet.Bonuses.Desc1" }}</p>
			<p>{{ localize "SFRPG.ActorSheet.Bonuses.Desc2" }}</p>
			<p>{{ localize "SFRPG.ActorSheet.Bonuses.Desc3" }}</p>
			<div class="form-group npc-bonuses-header">
				<label style="flex:4">
				</label>
				<div class="form-fields">
					<span data-tooltip="{{ localize "SFRPG.ActorSheet.Bonuses.AttackBonusTooltip" }}">{{ localize "SFRPG.ActorSheet.Bonuses.AttackBonus" }}</span>
				</div>
				<div class="form-fields">
					<span data-tooltip="{{ localize "SFRPG.ActorSheet.Bonuses.DamageBonusTooltip" }}">{{ localize "SFRPG.ActorSheet.Bonuses.DamageBonus" }}</span>
				</div>
			</div>
			<div class="form-group">
				<label style="flex:4">
					{{ localize "SFRPG.ActorSheet.Bonuses.Base" }}
				</label>
				<div class="form-fields">
					<input type="text" name="system.npcBonus.base.attack.value" value="{{system.npcBonus.base.attack.value}}" data-tooltip="@npcBonus.base.attack.value" data-dtype="Number" />
					<p data-tooltip="@npcBonus.base.attack.mod">{{numberFormat system.npcBonus.base.attack.mod decimals=0 sign=true}}</p>
				</div>
				<div class="form-fields">
					<input type="text" name="system.npcBonus.base.damage.value" value="{{system.npcBonus.base.damage.value}}" data-tooltip="@npcBonus.base.damage.value" data-dtype="Number" />
					<p data-tooltip="@npcBonus.base.damage.mod">{{numberFormat system.npcBonus.base.damage.mod decimals=0 sign=true}}</p>
				</div>
			</div>
			<hr/>
			{{#each npcBonus as |bonus type|}}
			<div class="form-group">
				<label style="flex:4">
					{{bonus.label}}
				</label>
				<div class="form-fields">
					<input type="text" name="system.npcBonus.{{type}}.attack.value" value="{{bonus.attack.value}}" data-tooltip="@npcBonus.{{type}}.attack.value" data-dtype="Number" />
					<p data-tooltip="@npcBonus.{{type}}.attack.mod">{{numberFormat bonus.attack.mod decimals=0 sign=true}}</p>
				</div>
				<div class="form-fields">
					<input type="text" name="system.npcBonus.{{type}}.damage.value" value="{{bonus.damage.value}}" data-tooltip="@npcBonus.{{type}}.damage.value" data-dtype="Number" />
					<p data-tooltip="@npcBonus.{{type}}.damage.mod">{{numberFormat bonus.damage.mod decimals=0 sign=true}}</p>
				</div>
			</div>
			{{/each}}
		</div>
	</div>
</div>